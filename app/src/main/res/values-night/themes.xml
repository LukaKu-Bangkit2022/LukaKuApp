<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LukaKu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_smoke</item>
        <item name="colorPrimaryVariant">@color/black_pearl</item>
        <item name="colorOnPrimary">@color/nobel</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_smoke</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white_smoke</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black_pearl</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_pearl</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_pearl</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_mark_logo_night</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.LukaKu</item>
    </style>

    <style name="LogoMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextOnClick">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>