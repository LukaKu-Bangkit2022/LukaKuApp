<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LukaKu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_pearl</item>
        <item name="colorPrimaryVariant">@color/white_smoke</item>
        <item name="colorOnPrimary">@color/bunting</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_pearl</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white_smoke</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white_smoke</item>
        <item name="android:navigationBarColor">@color/black_pearl_transparent</item>
        <item name="android:statusBarColor">@color/black_pearl_transparent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white_smoke</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_mark_logo_light</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/black_pearl_transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.LukaKu</item>
    </style>

    <style name="LogoMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextOnClick">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DivStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black_pearl</item>
    </style>

    <style name="TextDescSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black_pearl</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="TextSubSettings">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/bunting</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>